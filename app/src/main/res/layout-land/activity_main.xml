<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ekzhu.lolkillscounter.MainActivity">

    <ImageView
        style="@style/bg"
        android:src="@drawable/bg3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/blueTeamLogo"
                    style="@style/Team_imageLand.A"
                    android:src="@drawable/blue" />

                <TextView
                    style="@style/TeamLand"
                    android:text="@string/blue_team" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button"
                    style="@style/buttonsLand"
                    android:onClick="addOneForTeamA"
                    android:text="@string/kill" />

                <TextView
                    android:id="@+id/teamA"
                    style="@style/buttontextLand.A"
                    android:text="@string/start0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    style="@style/buttonsLand"
                    android:onClick="addOneForBaronA"
                    android:text="@string/baron" />

                <TextView
                    android:id="@+id/baronA"
                    style="@style/buttontextLand.A"
                    android:text="@string/start0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    style="@style/buttonsLand"
                    android:onClick="addOneForDragonA"
                    android:text="@string/dragon" />

                <TextView
                    android:id="@+id/dragonA"
                    style="@style/buttontextLand.A"
                    android:text="@string/start0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    style="@style/buttonsLand"
                    android:onClick="addOneForTowerA"
                    android:text="@string/tower" />

                <TextView
                    android:id="@+id/towerA"
                    style="@style/buttontextLand.A"
                    android:text="@string/start0" />

            </LinearLayout>

        </LinearLayout>

            <ImageView
                android:id="@+id/Logo"
                style="@style/LogoLand"
                android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TeamLand"
                    android:text="@string/red_team_land" />

                <ImageView
                    android:id="@+id/redTeamLogo"
                    style="@style/Team_imageLand.B"
                    android:src="@drawable/red" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/teamB"
                    style="@style/buttontextLand.B"
                    android:text="@string/start0" />

                <Button
                    android:id="@+id/button2"
                    style="@style/buttonsLand"
                    android:onClick="addOneForTeamB"
                    android:text="@string/kill" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/baronB"
                    style="@style/buttontextLand.B"
                    android:text="@string/start0" />

                <Button
                    style="@style/buttonsLand"
                    android:onClick="addOneForBaronB"
                    android:text="@string/baron" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dragonB"
                    style="@style/buttontextLand.B"
                    android:text="@string/start0" />

                <Button
                    style="@style/buttonsLand"
                    android:onClick="addOneForDragonB"
                    android:text="@string/dragon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/towerB"
                    style="@style/buttontextLand.B"
                    android:text="@string/start0" />

                <Button
                    style="@style/buttonsLand"
                    android:onClick="addOneForTowerB"
                    android:text="@string/tower" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        style="@style/new_matchLand"
        android:onClick="resetPoints"
        android:text="@string/new_match" />

</RelativeLayout>
